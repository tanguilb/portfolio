{% extends 'base.html.twig' %}

{% block body %}
    <h1>School</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ school.id }}</td>
            </tr>
            <tr>
                <th>Schoolname</th>
                <td>{{ school.schoolName }}</td>
            </tr>
            <tr>
                <th>Shortdescription</th>
                <td>{{ school.shortDescription }}</td>
            </tr>
            <tr>
                <th>Longdescritption</th>
                <td>{{ school.longDescritption }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if school.date %}{{ school.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('school_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('school_edit', { 'id': school.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
